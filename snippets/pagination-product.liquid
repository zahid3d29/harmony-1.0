{% comment %} Product Pagination  {% endcomment %}
<div class="flex items-center justify-between py-[44px]">
  <div class="flex flex-1 justify-between sm:hidden">
    {% if paginate.previous %}
      <a href="{{ paginate.previous.url }}" class="relative inline-flex items-center rounded-full border border-gray-300 bg-transparent px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-80">Previous</a>
    {% endif %}
    {% if paginate.next %}
      <a href="{{ paginate.next.url }}" class="relative ml-3 inline-flex items-center rounded-full border border-gray-300 bg-transparent px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-80">Next</a>
    {% endif %}
  </div>
  <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
    <nav class="pagination flex gap-x-4">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}" class="paginate_circle text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 hover:text-[#000000] focus:z-20 focus:outline-offset-0">
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
            </svg>
          </a> 
        {% endif %}

        {% for part in paginate.parts %}
          {% if part.title == paginate.current_page %}
            <p class="paginate_circle text-[14px] font-semibold harmony__color-{{ section.settings.product_card_color_scheme }} focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black">{{ part.title }}</p>
          {% elsif part.is_link %}
            <a href="{{ part.url }}" class="paginate_circle text-[14px] leading-[19px]  font-normal ring-1 ring-inset ring-gray-300 hover:bg-gray-50 hover:text-[#000000] focus:z-20 focus:outline-offset-0">{{ part.title }}</a>
          {% else %}
            <p class="paginate_circle text-[14px] leading-[19px]  font-normal ring-1 ring-inset ring-gray-300 focus:outline-offset-0">{{ part.title }}</p>
          {% endif %}
        {% endfor %}

        {% if paginate.next %}
          <a href="{{ paginate.next.url }}" class="paginate_circle ring-1 ring-inset ring-gray-300 hover:bg-gray-50 hover:text-[#000000] focus:z-20 focus:outline-offset-0">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
          </a> 
        {% endif %}
    </nav>
    <div class="article__paginate-result">
      <p class="text-[14px] leading-[19px] text-[#ffffff] font-normal">
        Showing
        <span class="font-medium">{{ paginate.current_offset | plus: 1 }}</span>
        to
        <span class="font-medium">{{ paginate.current_offset | plus: paginate.page_size }}</span>
        of
        <span class="font-medium">{{ paginate.items }}</span>
        results
      </p>
    </div>
  </div>
</div>