{%- style -%}
    .harmony-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .harmony-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}


<section id="harmony-{{ section.id }}" class="harmony-{{ section.id }}-padding">
    <dd class="page__content {% if settings.body_font_size == 'sm' %}harmony__page-header-desc-sm{% elsif settings.body_font_size == 'lg' %}harmony__page-header-desc-lg{% else %}harmony__page-header-desc-theme-default{% endif %} mx-auto max-w-7xl px-6 py-6 lg:pl-8 lg:pr-48">
        {{ page.content }}
    </dd>
</section>


{% schema %}
{
    "name": "Page",
    "class": "harmony_section-page",
    "disabled_on": {
        "groups": ["header", "footer"]
    },
    "settings": [
        {
            "type": "color_scheme",
            "id": "page_color_scheme",
            "label": "Page Color Scheme",
            "default": "scheme-1"
        },
        {
            "type": "checkbox",
            "id": "enable_gradient",
            "label": "Background Gradient?",
            "default": false
        },
        {
            "type": "header",
            "content": "Section padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Bottom",
            "default": 36
        }

    ],
    "presets": [
        {
            "name": "Page",
            "category": "Harmony Sections"
        }
    ]
}
{% endschema %}
    