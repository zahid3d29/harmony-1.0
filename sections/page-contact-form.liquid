      "default": "+98 690 2148 99"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@example.com"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": "Send a message"
    },
    {
      "type": "checkbox",
      "id": "show_social_media",
      "label": "Show social media",
      "default": true,
      "info":"Add your social media links in theme settings"
    },
    {
      "type": "checkbox",
      "id": "show_copy_email",
      "label": "Show Copy email",
      "default": true
    }
  ],
    "presets": [
        {
            "name": "Contact Form",
            "category": "Harmony Sections"
        }
    ]
}
