    "settings": [
         {
      "type": "text",
      "id": "adress_label",
      "label": "Adress label",
      "default": "Visit"
    },
    {
      "type": "text",
      "id": "adress",
      "label": "Adress",
      "default": "170 Soho st, London UK"
    },
    {
      "type": "text",
      "id": "phone_label",
      "label": "Phone Label",
      "default": "Call"
    },
    {
      "type": "text",
      "id": "phone_number",
