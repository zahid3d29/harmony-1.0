<section id="harmony--{{ section.id }}" class="bg-[#fffaf4]">
  <div class="lg:pb-10">
    <div class="block h-15 w-full px-0 py-6 bg-gradient-to-b from-[#F3FFD1] to-[#fcf49000]"></div>
    <div class="mx-auto max-w-7xl px-6 md:px-10 grid grid-cols-1 lg:flex lg:justify-between">
      <div class="w-full lg:w-1/3">
        <h2 class="text-[31px] leading-[56px] text-[#000000] font-semibold tracking-tight">{{ section.settings.heading }}</h2>
        <p class="text-[12px] leading-[15px] text-[#000000] font-semibold mt-2 mb-6 max-w-[17rem]">
          {{ section.settings.sub_text }}
        </p>
      </div>
      <div class="w-full lg:w-1/2 text-left lg:text-center py-6">
        <div class="mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3">
          {% assign count = 1 %}

          {% for block in section.blocks %}
            {% if 'benifit' %}
              <div class="flex items-center gap-x-2 py-3 lg:py-0">
                <div class="text-[14px] leading-[15px] text-[#000000] font-semibold px-4 py-3 step inline w-10 lg:w-10 h-10 border-1 border-[#707070] shadow rounded-full">
                  {{ count }}
                </div>
                <div>
                  <p class="text-[14px] leading-[15px] text-[#000000] font-normal text-left">{{ block.settings.text }}</p>
                </div>
              </div>
              {% assign count = count | plus: 1 %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_text",
      "label": "Sub Text"
    }
  ],
  "blocks":[
    {
      "type":"benifit",
      "name":"Benifit",
      "settings":[
        {
          "type": "text",
          "label":"Text",
          "id":"text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why",
      "category": "Harmony Sections"
    }
  ]
}
{% endschema %}
