  {
    "name": "Hero Banner",
    "settings": [
        {
          "type": "text",
          "id": "banner_heading",
          "label": "Banner Heading",
          "default": "eASY Skin Care Routine"
        }
    ],
    "presets": [
        {
          "name": "Hero Banner",
          "category": "Harmony Sections"
        }
    ]
  }
{% endschema %}
    