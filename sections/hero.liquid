        {%- if section.settings.banner_heading != blank -%}
        <div class="mx-auto max-w-7xl relative isolate pt-14 px-4 lg:px-4">
            <div class="max-w-lg py-32 sm:py-18 lg:pt-[20rem]">
                <div class="hidden sm:mb-3 sm:flex sm:justify-left">
                <div class="relative rounded-full text-sm leading-6 text-gray-100">
                    {{ section.settings.banner_heading | escape }}
