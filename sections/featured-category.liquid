<style>
    /* Style the buttons inside the ftCats_tab */
    section#harmony--{{ section.id }} .ftCats_tab button {
        margin-bottom: 25px;
        transition: 0.5s;
    }

    /* Create an active/current "ftCats_tab button" class */
    section#harmony--{{ section.id }} .ftCats_tab button.active {
        color: rgb(0, 0, 0);
        font-weight: bold;
        font-size: 50px;
        padding-left: 12px;
        border-bottom: 1px solid #e6e6e6;
        transition: 0.5s;
    }
    section#harmony--{{ section.id }} .ftCats_tab button.active::before {
        content: "\2212";
        font-size: 60px;
        font-weight: 100;
        line-height: 1.8;
        color: #e6e6e6;
        margin-left: -17px;
    }

</style>

