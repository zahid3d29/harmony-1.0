{% style %}
  .harmony--{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .harmony--{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

{% assign block_count = section.blocks.size %}



<section id="harmony--{{ section.id }}" class="harmony__color-text-{{ section.settings.footerbenifits_color_scheme }} {% if section.settings.enable_gradient %} harmony__color-background-gradient-{{ section.settings.footerbenifits_color_scheme }} {% else %} harmony__color-background-{{ section.settings.footerbenifits_color_scheme }} {% endif %} harmony--{{ section.id }}-padding">
  <div class="footer__top py-[36px] border-b harmony__color-border-{{ section.settings.footerbenifits_color_scheme }}">
    <div class="mx-auto max-w-7xl px-6 md:px-10">
      <div class="grid text-center 
        {% if block_count == 1 %}
          grid-cols-1 md:grid-cols-1 lg:grid-cols-1
        {% elsif block_count == 2 %}
          grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2
        {% elsif block_count == 3 %}
          grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3
        {% elsif block_count >= 4 %}
          grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4
        {% endif %}
        gap-x-8 gap-y-8 lg:gap-y-16">
        {% for block in section.blocks %}
          {% if 'icon-text' %}
            <div class="relative flex items-center gap-x-4">
              {% if block.settings.icon != blank %}
                {{ block.settings.icon | image_url: width: '35' |  image_tag: class: 'h-[24px] w-[35px] object-contain' }}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-50' }}
              {% endif %}
              {% if block.settings.text != blank %}
                <dd class="{% if settings.body_font_size == 'sm' %}harmony__footerbenifits-sm{% elsif settings.body_font_size == 'lg' %}harmony__footerbenifits-lg{% else %}harmony__footerbenifits-theme-default{% endif %} {% if block_count == 1 %} max-w-full md:max-w-80 {% elsif block_count == 2 %} max-w-full sm:max-w-60 {% elsif block_count == 3 %} max-w-full sm:max-w-80 md:max-w-50 {% elsif block_count >= 4 %} max-w-full sm:max-w-80 md:max-w-50 lg:max-w-40 {% endif %}  text-left">
                  {{ block.settings.text }}
                </dd>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Footer Benifits",
  "class": "harmony_section-footer-benifits",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "footerbenifits_color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_gradient",
      "label": "Background Gradient?",
      "default": false
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks":[
    {
      "type":"icon_text",
      "name":"Icon With Text",
      "settings":[
        {
          "type": "image_picker",
          "id":"icon",
          "label":"Icon"
        },
        {
          "type":"inline_richtext",
          "id":"text",
          "label":"Text",
          "default": "Be the first to know about promotions and skincare tips."
        }
      ]
    }
  ],
  "presets":[
    {
      "name":"Footer Benifits"
    }
  ]

}
{% endschema %}


{% comment %} schema settings color  {% endcomment %}
{% for scheme in settings.color_schemes %}
  {% style %} 
    .harmony__color-{{ scheme.id }}{
      background: rgb({{ scheme.settings.background.red }},{{ scheme.settings.background.green }},{{ scheme.settings.background.blue }});
      color: rgb({{ scheme.settings.text.red }},{{ scheme.settings.text.green }},{{ scheme.settings.text.blue }});
    }
  {% endstyle %}
{% endfor %}
