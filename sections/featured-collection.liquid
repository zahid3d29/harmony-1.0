<style>
    /* Style the buttons inside the ftCats_tab */
    section#harmony--{{ section.id }} .ftCats_tab button {
        margin-bottom: 25px;
        transition: 0.5s;
    }

    /* Create an active/current "ftCats_tab button" class */
    section#harmony--{{ section.id }} .ftCats_tab button.active {
        color: rgb(0, 0, 0);
        font-weight: bold;
        font-size: 50px;
        padding-left: 12px;
        border-bottom: 1px solid #e6e6e6;
        transition: 0.5s;
    }
    section#harmony--{{ section.id }} .ftCats_tab button.active::before {
        content: "\2212";
        font-size: 60px;
        font-weight: 100;
        line-height: 1.8;
        color: #e6e6e6;
        margin-left: -17px;
    }

</style>
<div class="color-{{ section.settings.color_scheme }} isolate gradient">
<section id="harmony--{{ section.id }}">
    <div class="bg-[#ffffff] py-5 sm:py-5">
        <div class="mx-auto grid max-w-2xl grid-cols-1 items-center gap-x-8 gap-y-5 px-4 py-5 sm:px-6 sm:py-5 lg:max-w-7xl lg:grid-cols-2 lg:px-8">
            <div>
                <div class="ftCats_tab">
                  {% for block in section.blocks %}
                        <button class="categoryLinks block text-gray-400 px-15 py-0 w-full border-none outline-none text-left cursor-pointer text-lg hover:text-black hover:font-bold hover:border-b-2 hover:border-gray-300" onmouseover="openCategory(event, '{{ block.settings.collection.handle }}')" {% if forloop.index == 1 %} id="defaultCatsOpen"{% endif %}>{{ block.settings.collection.title }}</button>
                    {% endfor %}
                </div>
            </div>
            <div>
               {% for block in section.blocks %}
                <div id="{{ block.settings.collection.handle }}" class="categoryContent grid grid-cols-2 grid-rows-2 gap-4 sm:gap-6 lg:gap-8">
                     {%- for product in block.settings.collection.products limit: 4 -%}
                        <img src="{{ product.featured_media | image_url }}" alt="{{ product.featured_media.alt }}" class="rounded-lg bg-gray-100 animate__animated animate__fadeIn animate__sloweranimate__animated animate__fadeIn animate__slower">
                    {% endfor %}
                </div>
                 {% endfor %}
            </div>
        </div>
    </div>
</section>
</div>


<script>
    function openCategory(evt, categoryName) {
        var i, categoryContent, categoryLinks;
        categoryContent = document.getElementsByClassName("categoryContent");
        for (i = 0; i < categoryContent.length; i++) {
            categoryContent[i].style.display = "none";
        }
        categoryLinks = document.getElementsByClassName("categoryLinks");
        for (i = 0; i < categoryLinks.length; i++) {
            categoryLinks[i].className = categoryLinks[i].className.replace(" active", "");
        }
        document.getElementById(categoryName).style.display = "grid";
        evt.currentTarget.className += " active";
    }
    // Get the element with id="defaultOpen" and click on it
    document.getElementById("defaultCatsOpen").dispatchEvent(new Event('mouseover'));
</script>
   

{% schema %}
{
    "name": "Featured Collection",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Color scheme",
            "info": "To edit all your theme's colors, go to your color theme settings.",
            "default": "background-1"
        }
   
    ],
    "blocks":[
        {
          "type":"block",
          "name": "Collection",
          "settings": [
            {
                "type": "collection",
                "id": "collection",
                "label": "Collection"
            }
          ]
        }
    ],
    "presets": [
        {
            "name": "Featured Collection",
            "category": "Harmony Sections"
        }
    ]
 }
{% endschema %}