
<section id="harmony--{{ section.id }}" class="login-page">
  <div class="flex min-h-full flex-col justify-center px-6 py-12">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2 class="text-[35px] leading-[35px] text-[#000000]">Register</h2>
      <div class="text-[14px] leading-[19px] text-[#000000] mt-[16px]">Welcome back! Please enter your account details to create your account.</div>
    </div>
  
    <div class="sm:mx-auto sm:w-full sm:max-w-sm mt-[27px]">
      <form class="space-y-6" action="#" method="POST">
        <div>
            <div class="mt-2">
              <input id="first_name" name="fname" type="fname" autocomplete="fname" required="required" class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200" placeholder="First Name">
            </div>
        </div>
        <div>
            <div class="mt-2">
              <input id="last_name" name="lname" type="lname" autocomplete="lname" required="required" class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200" placeholder="Last Name">
            </div>
        </div>
        <div>
          <div class="mt-2">
            <input id="email-address" name="email" type="email" autocomplete="email" required="required" class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200" placeholder="Email address">
          </div>
        </div>
  
        <div>
          <div class="flex justify-between mt-2">
            <input id="password" name="password" type="password" autocomplete="current-password" required="required" class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200" placeholder="Password">
            <span class="show-hide-pass border-b flex items-end">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
            </span>
          </div>
        </div>
        <div>
          <button type="submit" class="flex w-full h-[55px] justify-center text-[17px] leading-[21px] text-[#f7f4ed] bg-[#373738] px-3 py-3.5 hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black">Create</button>
        </div>
      </form>
  
      <div class="mt-10 text-center text-[14px] leading-[19px] text-[#000000]">
        Already user?
        <a href="#" class="text-[14px] leading-[19px] text-[#000000] hover:text-gray-500 underline">Login</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
    {
        "name": "Register Page",
        "settings": [
            {
                "type": "text",
                "id": "banner_heading",
                "label": "Banner Heading",
                "default": "Easy Skin Care Routine"
            }
        ],
        "presets": [
            {
                "name": "Register Page",
                "category": "Harmony Sections"
            }
        ]
    }
{% endschema %}