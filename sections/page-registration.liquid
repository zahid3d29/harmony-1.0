
<section id="harmony--{{ section.id }}" class="registration-page">
  <div class="flex min-h-full flex-col justify-center px-6 py-12">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2 class="text-[35px] leading-[35px] text-[#000000]">Register</h2>
      <div class="text-[14px] leading-[19px] text-[#000000] mt-[16px]">Welcome back! Please enter your account details to create your account.</div>
    </div>
  
    <div class="sm:mx-auto sm:w-full sm:max-w-sm mt-[27px]">
       {%- form 'create_customer', novalidate: 'novalidate' , class: 'space-y-6' -%}
     
        <div>
            <div class="mt-2">
               <input
        type="text"
        name="customer[first_name]"
        id="RegisterForm-FirstName"
        {% if form.first_name %}
          value="{{ form.first_name }}"
        {% endif %}
        autocomplete="given-name"
                  class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200"
        placeholder="First Name"
      >
            </div>
        </div>
        <div>
            <div class="mt-2">
              <input
        type="text"
        name="customer[last_name]"
        id="RegisterForm-LastName"
        {% if form.last_name %}
          value="{{ form.last_name }}"
        {% endif %}
                class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200"
        autocomplete="family-name"
        placeholder=" Last Name"
      >
            </div>
        </div>
        <div>
          <div class="mt-2">
             <input
        type="email"
        name="customer[email]"
        id="RegisterForm-email"
        {% if form.email %}
          value="{{ form.email }}"
        {% endif %}
               class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200"
        spellcheck="false"
        autocapitalize="off"
        autocomplete="email"
        aria-required="true"
        {% if form.errors contains 'email' %}
          aria-invalid="true"
          aria-describedby="RegisterForm-email-error"
        {% endif %}
        placeholder="Email"
      >
          </div>
        </div>
  
        <div>
          <div class="flex justify-between mt-2">
          <input
        type="password"
            class="w-full flex-auto border-0 border-b border-b-gray-200 text-[14px] leading-[19px] text-[#000000] font-normal bg-transparent px-0 py-2 focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200"
        name="customer[password]"
        id="RegisterForm-password"
        aria-required="true"
        {% if form.errors contains 'password' %}
          aria-invalid="true"
          aria-describedby="RegisterForm-password-error"
        {% endif %}
        placeholder="Password"
      >
            <span class="show-hide-pass border-b flex items-end">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
            </span>
          </div>
        </div>
        <div>
          <button type="submit" class="flex w-full h-[55px] justify-center text-[17px] leading-[21px] text-[#f7f4ed] bg-[#373738] px-3 py-3.5 hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black">Create</button>
        </div>
      
  {% endform %}
      <div class="mt-10 text-center text-[14px] leading-[19px] text-[#000000]">
        Already user?
        <a href="/account/login" class="text-[14px] leading-[19px] text-[#000000] hover:text-gray-500 underline">Login</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
    {
        "name": "Registration",
        "disabled_on": {
          "groups": ["header", "footer"]
        },
        "settings": [
            {
                "type": "text",
                "id": "banner_heading",
                "label": "Banner Heading",
                "default": "Easy Skin Care Routine"
            }
        ],
        "presets": [
            {
                "name": "Registration",
                "category": "Harmony Sections"
            }
        ]
    }
{% endschema %}