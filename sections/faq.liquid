<style>
    /* Style the faq__tab */
    .faq__tab {
        overflow: hidden;
    }

    /* Style the buttons inside the faq__tab */
    .faq__tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        border-radius: 30px;
        padding: 5px 20px;
        transition: 0.3s;
        font-size: 14px;
    }

    /* Change background color of buttons on hover */
    .faq__tab button:hover {
        background-color: #373738;
        color: #fff;
    }

    /* Create an faqTabActive/current faq__tablink class */
    .faq__tab button.faqTabActive {
        background-color: #373738;
        color: #fff;
    }

    /* Style the faq__tab content */
    .faq__tabcontent {
        display: none;
        padding: 6px 0px;
    }

    /* Style the close button */
    .faq__tab-topright {
        float: right;
        cursor: pointer;
        font-size: 28px;
    }

    .faq__tab-topright:hover {color: red;}


/* faqAccordion style   */

    .faqAccordion {
        color: #444;
        cursor: pointer;
        padding: 18px 0px;
        width: 100%;
        border-bottom: 1px solid #eee;
        text-align: left;
        outline: none;
        font-size: 15px;
        transition: 0.4s;
    }
    .accTabActive, .faqAccordion:hover {
        background-color: #FFFAF4;
    }
    .faqAccordion:after {
        content: '\002B';
        color: #777;
        font-weight: bold;
        float: right;
        margin-left: 5px;
    }
    .accTabActive:after {
        content: "\2212";
    }
    .faqPanel {
        padding: 0 10px 0px 0px;
        background-color: #FFFAF4;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }
</style>

