{% schema %}
{
    "name": "How to use",
    "class": "harmony_section-how-to-use",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "color_scheme",
        "id": "howToUse_color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      },
      {
        "type": "checkbox",
        "id": "enable_gradient",
        "label": "Background Gradient?",
        "default": false
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Section Heading"
      },
      {
        "type": "checkbox",
        "id": "show_heeading",
        "label": "Show Heading",
        "default": true
      },
      {
        "type": "text",
        "id": "page_title",
        "label": "Page Title",
        "default": "About us"
      },
      {
        "type": "text",
        "id": "page_desc",
        "label": "Page Short Description",
        "default": "<p>We understand the importance of easy to use skincare products that feels comfortable. This is why we developed Swiss.</p>"
      }
    ],
    "presets": [
      {
        "name": "How to use",
        "category": "Harmony Sections"
      }
    ]
}
{% endschema %}
          