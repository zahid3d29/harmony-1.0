
{% style %}
  .harmony--{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .harmony--{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}


<section id="harmony--{{ section.id }}" class="section__how-to-use {% if section.settings.enable_gradient %} harmony__color-background-gradient-{{ section.settings.faq_color_scheme }} {% else %} harmony__color-background-{{ section.settings.faq_color_scheme }} {% endif %} harmony--{{ section.id }}-padding">

  <div class="steps-grid mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-6 gap-y-8 border-t border-gray-200 py-8 sm:py-16 lg:mx-0 lg:max-w-none lg:grid-cols-4">
