<section id="harmony--{{ section.id }}" class="section__page-header harmony__color-{{ section.settings.color_scheme }}">
    {%  render 'gradient-bar' %}
    <div class="page__header flex flex-col md:flex-row max-w-7xl mx-auto items-start justify-start md:justify-between px-6 md:px-8 pb-8 pt-8 lg:pt-8 mb-88">
        {%- if section.settings.heading != blank -%}
            <h1 class="page__heading text-[37px] leading-[43px] md:text-[47px] md:leading-[53px] lg:text-[67px] lg:leading-[73px] font-normal max-w-md tracking-tight mb-6 md:mb-0">
                {{ section.settings.heading }}
            </h1>
        {%- elsif template.name contains 'product' -%}
            <h1 class="page__heading text-[37px] leading-[43px] md:text-[47px] md:leading-[53px] lg:text-[67px] lg:leading-[73px] font-normal max-w-md tracking-tight mb-6 md:mb-0">
                {{ product.title }}
            </h1>
        {%- elsif template.name contains 'collection' -%}
            <h1 class="page__heading text-[37px] leading-[43px] md:text-[47px] md:leading-[53px] lg:text-[67px] lg:leading-[73px] font-normal max-w-md tracking-tight mb-6 md:mb-0">
                {{ collection.title }}
            </h1>
        {%- elsif template.name contains 'blog' -%}
            <h1 class="page__heading text-[37px] leading-[43px] md:text-[47px] md:leading-[53px] lg:text-[67px] lg:leading-[73px] font-normal max-w-md tracking-tight mb-6 md:mb-0">
                {{ blog.title }}
            </h1>
        {%- elsif template.name contains 'article' -%}
            <h1 class="page__heading text-[37px] leading-[43px] md:text-[47px] md:leading-[53px] lg:text-[67px] lg:leading-[73px] font-normal max-w-md tracking-tight mb-6 md:mb-0">
                {{ article.title }}
            </h1>
        {%- elsif template.name contains 'page' -%}
            <h1 class="page__heading text-[37px] leading-[43px] md:text-[47px] md:leading-[53px] lg:text-[67px] lg:leading-[73px] font-normal max-w-md tracking-tight mb-6 md:mb-0">
                {{ page.title }}
            </h1>
        {%- else -%}
            <h1 class="page__heading text-[37px] leading-[43px] md:text-[47px] md:leading-[53px] lg:text-[67px] lg:leading-[73px] font-normal max-w-md tracking-tight mb-6 md:mb-0">
                Page Heading not set yet!
            </h1>
        {%- endif -%}
        <div class="flex items-center justify-start md:justify-end">
            <div class="max-w-sm lg:px-8">
                <span class="page__title inline text-[14px] leading-[19px] font-normal border rounded-full px-2 py-2">{{ section.settings.page_title }}</span>
                <div class="page__description text-[20px] leading-[22px] font-normal mt-[20px]">
                    {{ section.settings.page_desc }}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Page Header",
        "settings": [
            {
                "type": "color_scheme",
                "id": "color_scheme",
                "label": "Color Scheme",
                "default": "scheme-1"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Section Heading"
            },
            {
                "type": "checkbox",
                "id": "show_heeading",
                "label": "Show Heading",
                "default": true
            },
            {
                "type": "text",
                "id": "page_title",
                "label": "Page Title",
                "default": "About us"
            },
            {
                "type": "text",
                "id": "page_desc",
                "label": "Page Short Description",
                "default": "<p>We understand the importance of easy to use skincare products that feels comfortable. This is why we developed Swiss.</p>"
            }
        ],
        "presets": [
            {
                "name": "Page Header",
                "category": "Harmony Sections"
            }
        ]
    }
    {% endschema %}
              