        {% if section.settings.slider_navigation == 'none' %}
          style="display:none;"
        {% endif %}
      >
        <button
          class="flex items-center rounded-md py-[0.4375rem] pl-2 pr-2 lg:pr-3"
          id="headlessui-tabs-tab-6"
          role="tab"
          type="button"
          aria-selected="false"
          tabindex="-1"
          aria-controls="headlessui-tabs-panel-8"
        >
          <span
            class="product_carousel-prev lg:mr-2 "
            {% if section.settings.slider_navigation == 'dots' %}
              style="display:none;"
            {% endif %}
          >
            <a
              class="prev relative inline-flex items-center rounded-full text-[17px] leading-[35px]  px-2 py-2 hover: ring-1 ring-inset ring-gray-300 bg-transparent hover:bg-[#7070704d] focus:z-20 focus:outline-offset-0"
            >
              <span class="sr-only">Previous</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd"></path>
              </svg>
            </a>
          </span>
          <div
            class="pagination"
            {% if section.settings.slider_navigation == 'arrows' %}
              style="display:none;"
            {% endif %}
          ></div>
          <span
            class="product_carousel-next lg:ml-2 text-gray-700"
            {% if section.settings.slider_navigation == 'dots' %}
              style="display:none;"
            {% endif %}
          >
            <a
              class="next relative inline-flex items-center rounded-full px-2 py-2 text-gray-700 hover: bg-white hover:bg-gray-100 ring-1 ring-inset ring-[#7070704d] focus:z-20 focus:outline-offset-0"
            >
              <span class="sr-only">Next</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"></path>
