                          <h3 class="product__title mt-2 mb-3 pb-2 text-[16px] leading-[21px]  font-medium border-b border-[#7070704d]">
                            {{ sale_product.title }}
                          </h3>
                        </a>
                        {%- if section.settings.show_category -%}
                          {% for collection in sale_product.collections limit: 1 %}
                            <div class="product__collection text-[14px] leading-[19px]  inline-block px-2 py-0.5 border border-black rounded-full collection-title">
                              {{ collection.title }}
                            </div>
                          {% endfor %}
                        {% endif %}
                      </div>
                      <div class="w-2/5">
                        <div class="product_price mt-2 mb-3 pb-3 text-[14px] leading-[19px]  text-right border-b border-[#7070704d]">
                          {% if section.settings.show_price %}
