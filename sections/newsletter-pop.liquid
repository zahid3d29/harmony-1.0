{% comment %} This section will be a snippets of newsletter popup  {% endcomment %}

<div class="newsletter__popup">
    <div class="relative z-10" role="dialog" aria-modal="true">
        <div class="fixed inset-0 hidden bg-gray-500 bg-opacity-75 transition-opacity md:block"></div>
        <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
            <div class="flex min-h-full items-stretch justify-center text-center md:items-center md:px-2 lg:px-4">
                <div class="popup flex w-full transform text-left text-base transition md:max-w-2xl lg:max-w-4xl">
                    <div class="relative bg-[#F7F4ED] flex w-full items-center overflow-hidden bg-white">
                        <button type="button" class="absolute right-4 top-4 text-gray-400 hover:text-gray-500 sm:right-6 sm:top-8 md:right-6 md:top-6 lg:right-8 lg:top-8">
                            <span class="sr-only">Close</span>
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
            
                        <div class="bg-[#F7F4ED] grid w-full grid-cols-1 items-start gap-x-0 gap-y-8 sm:grid-cols-12 lg:gap-x-0">
                            <div class="aspect-h-2 aspect-w-2 overflow-hidden bg-gray-100 sm:col-span-6 lg:col-span-6">
                                <img src="https://cdn.shopify.com/s/files/1/0586/2499/9582/files/newsletter-img.png?v=1713693079" alt="newsletter-image" class="object-cover object-center">
                            </div>
                            <div class="sm:col-span-6 lg:col-span-6 bg-[#F7F4ED] px-6 py-10">
                                <img src="https://cdn.shopify.com/s/files/1/0586/2499/9582/files/Mail.png?v=1713695102" alt="newsletter-image" class="object-cover object-center">
                                <h2 class="text-2xl font-bold text-gray-900 sm:pr-12 mb-2">Subscibe and save money.</h2>
                                <p class="max-w-[90%] text-base text-gray-900 mb-4">Subscribe to our newsletter and be the first to know about promotions, new product launches, and skincare tips.</p>
                                <div class="mt-6 flex max-w-md gap-x-1">
                                    <label for="email-address" class="sr-only px-0">Email address</label>
                                    <input id="email-address" name="email" type="email" autocomplete="email" required="required" class="min-w-0 flex-auto border-0 border-b border-b-gray-500 bg-transparent px-0 py-2 text-white focus:ring-0 focus:border-b-gray-500 focus:outline-none focus:border-b-2 focus:border-gray-200 sm:text-sm sm:leading-6" placeholder="Enter your email address">
                                    <button type="submit" class="flex-none">
                                        <span class="text-gray-100 border border-gray-200 rounded-full px-2.5 py-2 bg-gray-900 hover:bg-gray-100 hover:text-gray-900 transition" aria-hidden="true">â†’</span>
                                    </button>
                                </div>
                                <div class="relative flex gap-x-3 mt-6">
                                    <div class="flex h-6 items-center">
                                        <input id="tearms" name="tearms" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                                    </div>
                                    <div class="text-sm leading-6">
                                        <label for="tearms" class="font-normal text-gray-900">I agree to the tearms and services</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




