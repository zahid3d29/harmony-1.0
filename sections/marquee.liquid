    "name": "Marquee",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }
    ],
    "presets": [
        {
            "name": "Marquee",
            "category": "Harmony Sections"
        }
    ]
}
{% endschema %}
