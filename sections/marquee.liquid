<script>
    let SwiperTop = new Swiper('.swiper--top-{{ section.id }}', {
        spaceBetween: 0,
        centeredSlides: false,
        speed: 15000,
        autoplay: {
            delay: 0,
        },
        loop: true,
        slidesPerView:'auto',
        allowTouchMove: false,
        disableOnInteraction: true
    });

    let SwiperBottom = new Swiper('.swiper--bottom-{{ section.id }}', {
        spaceBetween: 0,
        centeredSlides: false,
        speed: 15000,
        autoplay: {
