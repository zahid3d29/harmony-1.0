<div class="relative isolate overflow-hidden bg-[#FFFAF4] py-12 md:py-[50px]">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-4 md:gap-y-16 lg:max-w-none lg:grid-cols-7">
      <div class="col-span-2">
        <h2 class="text-[26px] leading-[46px] text-black font-bold">{{ section.settings.heading }}</h2>
      </div>
      <dl class="grid grid-cols-1 gap-x-8 gap-y-4 md:gap-y-10 sm:grid-cols-3 col-span-3">
        {% assign count = 1 %}
        {% for block in section.blocks %}
          {% if 'usage' %}
            <div class="flex flex-row gap-x-4 items-center md:justify-center">
              <div class="text-[12px] leading-[15px] text-[#000000] font-semibold px-4 py-3 step inline w-10 lg:w-10 h-10 border-1 border-[#707070] shadow rounded-full">
                {{ count }}
              </div>
              <dd class="text-[11px] leading-[16px] text-black font-normal pt-1">{{ block.settings.text }}</dd>
            </div>
            {% assign count = count | plus: 1 %}
          {% endif %}
        {% endfor %}
      </dl>
      <div class="question flex lg:justify-end col-span-2">
        <dd class="flex items-center text-[11px] leading-[16px] text-black font-normal">
          HAVE A QUESTION? <a class="underline" href="#">CHECK OUT faq.</a>
        </dd>
      </div>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Product how to use",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How to use ?"
    }
  ],
  "blocks":[
    {
      "type": "usage",
      "name":"Step",
      "settings": [
          {
          "type": "text",
          "id":"text",
          "label": "Text"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product how to use",
      "category": "Harmony Sections"
    }
  ]
}
{% endschema %}