<style>

    .productFeaturedTab {
        overflow: hidden;
    }

    /* Style the buttons inside the productFeaturedTab */
    .productFeaturedTab button {
        cursor: pointer;;
        transition: 0.3s;
    }

    /* Change background color of buttons on hover */
    .productFeaturedTab button:hover {
        border-bottom: 1px solid #000000;
    }

    /* Create an active/current productFeaturedTablink class */
    .productFeaturedTab button.active {
        border-bottom: 1px solid #000000;
    }

    /* Style the productFeaturedTab content */
    .productFeaturedTabcontent {
        display: none;
        animation: fadeEffect 2s; 
    }

    @keyframes fadeEffect {
        from {opacity: 0;}
        to {opacity: 1;}
    }
</style>

<section id="harmony--{{ section.id }}">
    <div class="bg-white">
        <div class="mx-auto max-w-2xl px-4 py-10 sm:px-6 sm:py-8 lg:max-w-7xl lg:px-8">
            <div class="flex items-baseline justify-between border-b border-gray-200 pb-6 pt-24 mb-6">
                <h1 class="text-4xl font-bold tracking-tight text-gray-900">{{ section.settings.heading }}</h1>
                <div class="flex items-center">
                    <button class="flex items-center rounded-md py-[0.4375rem] pl-2 pr-2 text-sm font-semibold lg:pr-3" id="headlessui-tabs-tab-6" role="tab" type="button" aria-selected="false" tabindex="-1" aria-controls="headlessui-tabs-panel-8">
                        <span class="lg:mr-5 text-slate-700"><i class="text-xs pr-3 pl-2 py-2 bg-gray-200 border-1 rounded-full fa fa-chevron-left"></i></span>
                        <span class="mx-2 lg:mx-2 text-slate-200">
                            <i class="text-xs fa fa-circle"></i>
                        </span>
                        <span class="mx-2 lg:mx-2 text-slate-700">
                            <i class="text-sm fa fa-circle"></i>
                        </span>
                        <span class="mx-2 lg:mx-2 text-slate-200">
                            <i class="text-xs fa fa-circle"></i>
                        </span>
                        <span class="lg:ml-5 text-white"><i class="text-xs pr-2 pl-3 py-2 bg-gray-800 border-1 rounded-full fa fa-chevron-right"></i></span>
                    </button>
                </div>
            </div>
            <div class="mx-auto">
                <div class="productFeaturedTab bg-white-900 grid border mb-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-4">
                   {% for block in section.blocks %}
                        <button class="productFeaturedTablinks block h-[4rem] my-1 lg:my-0 bg-zinc-300 md:bg-transparent border-0 lg:border-r-4 border-grey-500 {% if forloop.index == 1 %}active{% endif %}" onmouseover="openCity(event, 'pd_{{ block.settings.collection.handle }}')" {% if forloop.index == 1 %} id="defaultOpen"{% endif %}>{{ block.settings.collection.title }}</button>
                    {% endfor %}
                </div>


              {% for block in section.blocks %}
                <div id="pd_{{ block.settings.collection.handle }}" class="productFeaturedTabcontent grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 xl:gap-x-8" {% if forloop.index == 1 %}style="display:grid"{% endif %} >

                  {%- for product in block.settings.collection.products limit: 6 -%}
                    <a href="{{ product.url }}" class="group">
                        <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-7 xl:aspect-w-10">
                            <div class="h-full w-full bg-[url('{{ product.featured_media | image_url : width: 360 }}')] hover:bg-[url('{{ product.media[1] | image_url  : width: 360 }}')] bg-cover w-48 h-48"></div>
                        </div>
                        <div class="mt-4 flex justify-between">
                            <div class="w-3/5">
                                <h3 class="mt-2 text-xs text-gray-700">{{ product.title }}</h3>
                                <!-- <p class="mt-2 text-xs font-small inline text-gray-900 px-2 py-sm border border-black rounded-full">Category</p> -->
                              {% for collection in product.collections limit: 3 %}
                                <p class="mt-2 text-xs font-small inline text-gray-900 px-2 py-sm border border-black rounded-full collection-title">{{ collection.title }}</p>
                                {% endfor %}
                            </div>
                            <div class="w-2/5">
                                <h3 class="mt-2 text-xs text-right text-gray-700">{{ product.price | money }}</h3>
                                <p class="mt-2 text-xs font-small text-right text-gray-900">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <span class="text-right text-xs">(23)</span>
                                </p>
                            </div>    
                        </div>
                    </a>
                    {% endfor %}
                </div>
              {% endfor %}
           
            </div>              
        </div>
    </div>
</section>




{% schema %}
{
    "name": "Product Fetaured",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Section Heading",
            "default": "Section Heading"
        },
        {
            "type": "checkbox",
            "id": "show_heeading",
            "label": "Show Heading",
            "default": true
        }
    ],
     "blocks":[
         {
          "type":"block",
          "name": "Collection",
          "settings": [
             {
              "type": "collection",
              "id": "collection",
              "label": "Collection"
            }
          ]
        }
      ],
    "presets": [
        {
            "name": "Product Fetaured",
            "category": "Harmony Sections"
        }
    ]
}
{% endschema %}


<script>
    function openCity(evt, productFeaturedCatName) {
        var i, productFeaturedTabcontent, productFeaturedTablinks;
        productFeaturedTabcontent = document.getElementsByClassName("productFeaturedTabcontent");
        for (i = 0; i < productFeaturedTabcontent.length; i++) {
            productFeaturedTabcontent[i].style.display = "none";
        }
        productFeaturedTablinks = document.getElementsByClassName("productFeaturedTablinks");
        for (i = 0; i < productFeaturedTablinks.length; i++) {
            productFeaturedTablinks[i].className = productFeaturedTablinks[i].className.replace(" active", "");
        }
        document.getElementById(productFeaturedCatName).style.display = "grid";
        evt.currentTarget.className += " active";
    }
    // Get the element with id="defaultOpen" and click on it
    document.getElementById("defaultOpen").click();
</script>